#!/bin/bash -e

if [ -e /usr/local/sti/assemble ]; then
  # old assemble location in previous php image versions
  source /usr/local/sti/assemble
else 
  source ${STI_SCRIPTS_PATH}/assemble
fi

[[ -d ./tmp ]] && chmod -R go+rw ./tmp

mv /opt/app-root/src/src/Template/Layout/default.ctp /opt/app-root/src/src/Template/Layout/default.ctp.old
mv /opt/app-root/src/src/Template/Layout/default.ctp.onofrio /opt/app-root/src/src/Template/Layout/default.ctp

